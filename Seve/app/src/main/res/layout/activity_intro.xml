<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".IntroActivity">

    <androidx.viewpager.widget.ViewPager app:layout_constraintVertical_bias="0.446"
                                         app:layout_constraintHorizontal_bias="0.0"
                                         app:layout_constraintEnd_toEndOf="parent"
                                         app:layout_constraintStart_toStartOf="parent"
                                         app:layout_constraintTop_toTopOf="parent"
                                         app:layout_constraintBottom_toTopOf="@+id/tab_indicator"
                                         android:layout_marginBottom="8dp"
                                         android:layout_width="0dp"
                                         android:layout_height="529dp" android:id="@+id/screen_viewpager"/>
    <Button
            android:textColor="@color/dot_dark_screen3"
            android:drawableTint="@color/dot_dark_screen3"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:text="Next"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:id="@+id/btn_next"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"/>
    <com.google.android.material.tabs.TabLayout
            app:tabBackground="@drawable/indicator_selector"
            android:layout_width="130dp"
            android:layout_height="49dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_next" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" android:id="@+id/tab_indicator"
            app:layout_constraintHorizontal_bias="0.037" android:layout_marginBottom="4dp">
    </com.google.android.material.tabs.TabLayout>
    <Button
            android:text="Get Started"
            android:visibility="invisible"
            android:textColor="#fff"
            android:background="@drawable/btn_gradient_style"
            android:layout_width="167dp"
            android:layout_height="wrap_content" android:id="@+id/btn_get_started"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>